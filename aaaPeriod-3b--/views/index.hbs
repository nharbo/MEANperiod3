    <input name="email" id="username" type=email">
    <input name="password" id="password" type="password">
    <input type="submit" value="Sign Up!">
</form>

<form name="signInForm" action="/auth/login" method="POST">
    <input name="email" id="username" type=email">
    <input name="password" id="password" type="password">
    <input type="submit" value="Sign In!">
</form>

